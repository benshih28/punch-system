{
    "openapi": "3.0.0",
    "info": {
        "title": "Punch System API",
        "description": "打卡系統 API 文件",
        "contact": {
            "email": "admin@example.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "使用者登入",
                "description": "用戶使用電子郵件和密碼登入系統，成功後返回 JWT token",
                "operationId": "loginUser",
                "requestBody": {
                    "description": "登入憑證",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "description": "使用者電子郵件",
                                        "type": "string",
                                        "format": "email",
                                        "example": "john.doe@example.com"
                                    },
                                    "password": {
                                        "description": "使用者密碼",
                                        "type": "string",
                                        "example": "Password123!"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "登入成功，返回 JWT token和使用者資訊",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "access_token": {
                                            "description": "JWT 存取token",
                                            "type": "string",
                                            "example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..."
                                        },
                                        "token_type": {
                                            "description": "token類型",
                                            "type": "string",
                                            "example": "bearer"
                                        },
                                        "expires_in": {
                                            "description": "token過期時間（秒）",
                                            "type": "integer",
                                            "example": 3600
                                        },
                                        "user": {
                                            "description": "登入的使用者資訊",
                                            "properties": {
                                                "id": {
                                                    "description": "使用者 ID",
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "name": {
                                                    "description": "使用者名稱",
                                                    "type": "string",
                                                    "example": "John Doe"
                                                },
                                                "email": {
                                                    "description": "電子郵件",
                                                    "type": "string",
                                                    "example": "john.doe@example.com"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "認證失敗",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "description": "錯誤訊息",
                                            "type": "string",
                                            "example": "Unauthorized"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "伺服器錯誤，無法生成token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "description": "錯誤訊息",
                                            "type": "string",
                                            "example": "Could not create token"
                                        },
                                        "message": {
                                            "description": "異常詳細信息",
                                            "type": "string",
                                            "example": "詳細錯誤訊息"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/logout": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "使用者登出",
                "description": "用戶登出系統，使當前 JWT token失效",
                "operationId": "logoutUser",
                "responses": {
                    "200": {
                        "description": "成功登出",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "description": "登出成功訊息",
                                            "type": "string",
                                            "example": "Successfully logged out"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "未提供token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "description": "錯誤訊息",
                                            "type": "string",
                                            "example": "Token not provided"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "201": {
                        "description": "token已過期，但登出成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "description": "登出成功訊息",
                                            "type": "string",
                                            "example": "Token has expired, but logout success"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "登出失敗",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "description": "錯誤訊息",
                                            "type": "string",
                                            "example": "Failed to log out"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "使用者註冊",
                "description": "用戶註冊新帳號",
                "operationId": "registerUser",
                "requestBody": {
                    "description": "使用者註冊資訊",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirmation",
                                    "gender"
                                ],
                                "properties": {
                                    "name": {
                                        "description": "使用者名稱",
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "email": {
                                        "description": "電子郵件",
                                        "type": "string",
                                        "format": "email",
                                        "example": "john.doe@example.com"
                                    },
                                    "password": {
                                        "description": "密碼",
                                        "type": "string",
                                        "example": "Password123!"
                                    },
                                    "password_confirmation": {
                                        "description": "確認密碼",
                                        "type": "string",
                                        "example": "Password123!"
                                    },
                                    "gender": {
                                        "description": "性別",
                                        "type": "string",
                                        "enum": [
                                            "male",
                                            "female"
                                        ],
                                        "example": "male"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "註冊成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User successfully registered. Please log in."
                                        },
                                        "user": {
                                            "description": "使用者資訊",
                                            "type": "object"
                                        },
                                        "employee": {
                                            "description": "員工資訊",
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "驗證失敗"
                    }
                }
            }
        },
        "/api/user/update/profile": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "更新使用者個人資料（可選擇修改密碼或上傳大頭貼）",
                "operationId": "5238331b71079ba01fbe896701e2dce3",
                "requestBody": {
                    "required": false,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "old_password": {
                                        "description": "舊密碼 (修改密碼時必填)",
                                        "type": "string",
                                        "example": "OldPass123!",
                                        "nullable": true
                                    },
                                    "new_password": {
                                        "description": "新密碼 (修改密碼時必填)",
                                        "type": "string",
                                        "example": "NewPass456!",
                                        "nullable": true
                                    },
                                    "new_password_confirmation": {
                                        "description": "確認新密碼 (修改密碼時必填)",
                                        "type": "string",
                                        "example": "NewPass456!",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "個人資料已更新",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "個人資料已更新"
                                        },
                                        "avatar": {
                                            "type": "string",
                                            "example": "avatar_1.279f7c1cb3782406ae8f1c8fcfb16257ea04a63fe1d5e2c0050aaa197f690309"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "新密碼輸入不一致、密碼輸入不符規則",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            },
                                            "example": [
                                                "新密碼與確認密碼不一致",
                                                "新密碼至少需要 8 個字元(包含大小寫字母、數字和特殊符號)"
                                            ]
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "舊密碼錯誤或新密碼與舊密碼相同",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            },
                                            "example": [
                                                "舊密碼錯誤",
                                                "新密碼不能與舊密碼相同"
                                            ]
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "properties": {
                    "id": {
                        "description": "使用者 ID",
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "description": "使用者名稱",
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "description": "電子郵件",
                        "type": "string",
                        "format": "email",
                        "example": "john.doe@example.com"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "description": "使用 JWT token進行認證，格式為 'Bearer {token}'",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Authentication",
            "description": "Authentication"
        },
        {
            "name": "User",
            "description": "User"
        }
    ]
}